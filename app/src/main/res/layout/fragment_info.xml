<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Thông tin phòng bệnh"
            android:textColor="#1E1010"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="336dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4sp"
            android:text="Nếu bạn cảm thấy cơ thể có bất kỳ triệu chứng nào của COVID-19 vui lòng gọi cho chúng tôi hoặc gởi tin nhắn để nhận được giúp đỡ ngay lập tức."
            android:textColor="#1E1010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="335dp"
            android:layout_height="34dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="24dp"
            android:text="Bạn có đang khỏe mạnh không?"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/call_button"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="8dp"
            android:paddingLeft="16dp"
            android:text="Gọi ngay"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/btnMes"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/btnMes"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:background="@drawable/send_sms_button"
            android:drawableLeft="@drawable/ic_message_circle"
            android:drawablePadding="8dp"
            android:paddingLeft="16dp"
            android:text="Gửi SMS"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnCall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnCall"
            app:layout_constraintTop_toTopOf="@+id/btnCall" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hướng dẫn phòng dịch"
            android:textColor="#1E1010"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCall" />

        <Button
            android:id="@+id/btn_guide_student"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_student"
            android:background="#fde5d3"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Dành cho học sinh"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/btn_guide_school"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/school"
            android:background="#FDF2CF"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Dành cho trường học"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/btn_guide_student"
            app:layout_constraintTop_toBottomOf="@id/btn_guide_student" />

        <Button
            android:id="@+id/btn_guide_travel"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_travel"
            android:background="#D0E3F2"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Khi tham gia giao thông"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/btn_guide_school"
            app:layout_constraintTop_toBottomOf="@id/btn_guide_school" />

        <Button
            android:id="@+id/btn_guide_apartment"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_apartment"
            android:background="#DDDCF6"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Dành cho chung cư"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/btn_guide_travel"
            app:layout_constraintTop_toBottomOf="@id/btn_guide_travel" />

        <Button
            android:id="@+id/btn_guide_suspect"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_suspect"
            android:background="#E0F1FD"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Người có triệu chứng"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/btn_guide_apartment"
            app:layout_constraintTop_toBottomOf="@id/btn_guide_apartment" />

        <Button
            android:id="@+id/btn_guide_workspace"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_workspace"
            android:background="#E0F1FD"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Dành cho nơi làm việc"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/btn_guide_suspect"
            app:layout_constraintTop_toBottomOf="@id/btn_guide_suspect" />

        <Button
            android:id="@+id/btn_guide_family"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_family"
            android:background="#F2D2E4"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Dành cho gia đình"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/btn_guide_workspace"
            app:layout_constraintTop_toBottomOf="@id/btn_guide_workspace" />

        <Button
            android:id="@+id/btn_guide_service"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_service"
            android:background="#D4F4FC"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Dành cho khu dịch vụ"
            android:textAllCaps="false"
            android:textColor="@color/cardblack"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/btn_guide_family"
            app:layout_constraintTop_toBottomOf="@id/btn_guide_family" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>